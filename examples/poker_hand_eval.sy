range Score 1u8..10u8

range Value 1u8..14u8

range DeckSize 0u8..52u8

enum Suit {
  Spade:   0u8,
  Club:    1u8,
  Diamond: 2u8,
  Heart:   3u8,
}


variant Rank {
  Single: {
    name: str,
    score: Score,
    value: Value,
  },
  Double: {
    name: str,
    score1: Score,
    score2: Score,
    value1: Value,
    value2: Value,
  }
}

struct Card {
  suit: Suit,
  rank: Rank
}

