module sys

requirement os

fn print(message: str) {
  os.write(os.STDOUT, cptr(void(message)), message.byte_length)
}

fn printerr(message: str) {
  os.write(os.STDERR, cptr(void(message)), message.byte_length)
}

fn echo(message: str) {
  print("{message}\n")
}

fn echoerr(message: str) {
  printerr("{message}\n")
}

fn exit(code: s32, message: str) {
  echoerr(message)
  os.exit(code)
}

fn die(message: str) {
  echoerr(message)
  os.abort()
}
