module sys

requirement libc

fn print(message: str) {
  libc.fputs(libc.stdout, message)
}

fn printerr(message: str) {
  libc.fputs(libc.stderr, message)
}

fn echo(message: str) {
  print("{message}\n")
}

fn echoerr(message: str) {
  printerr("{message}\n")
}

fn exit(code: s32, message: str) {
  echoerr(message)
  libc.exit(s32)
}

fn die(message: str) {
  echoerr(message)
  libc.abort()
}
